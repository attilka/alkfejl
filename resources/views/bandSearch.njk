      <div class="col-md-3">
        <div class="form-group">
          <label for="inputBandName">Zenekar neve</label>
          <input type="text" class="form-control" placeholder="Név" id="inputBandName" name="bandName" value="{{ bandName }}">
        </div>
      </div>
      <div class="col-md-3">
