{% extends "layout" %}

{% block content %}

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibák</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}


<form class="form-horizontal" method="post">

  {{ csrfField }}

  <div class="form-group">
    <label for="date" class="col-lg-2 control-label">Dátum</label>
    <div class="col-lg-10">
      <input type="date" class="form-control" id="date" name="date" value="{{event.date)}}">
    </div>
  </div>
  <div class="form-group">
    <label for="instructions" class="col-lg-2 control-label">Jegyek</label>
    <div class="col-lg-10">
      <div class="input-group">
      <span class="input-group-addon" id="basic-addon1">http://</span>
      <input type="text" class="form-control" id="tickets" name="tickets" value="{{event.tickets}}">
      </div>
    </div>
  </div>
  <div class="form-group">
    <label for="description" class="col-lg-2 control-label">Leírás</label>
    <div class="col-lg-10">
      <textarea class="form-control" rows="4" cols="100" placeholder="Leírás" id="description" name="description">{{ event.description }}</textarea> 
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-default">Mégsem</button>
      <button type="submit" class="btn btn-primary">Küldés</button>
    </div>
  </div>
</form>

{% endblock %}